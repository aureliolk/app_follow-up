// apps/next-app/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      // Adicione o alias para shared-lib aqui TAMBÃ‰M para o editor no contexto do Next.js
       "@meuprojeto/shared-lib/*": ["../../packages/shared-lib/src/*"],
       "@meuprojeto/shared-lib": ["../../packages/shared-lib/src/index"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Mantenha false se precisar
    "noEmit": true,
    "incremental": true,
    "composite": true, // <<< HABILITA
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler", // Ou Node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [ { "name": "next" } ]
  },
   // <<< REFERENCIA A SHARED-LIB >>>
  "references": [
    { "path": "../../packages/shared-lib" }
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../../packages/shared-lib/src/**/*.ts"], // Inclui shared-lib para TS Server
  "exclude": ["node_modules", "**/dist", ".next"]
}