{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmit": false,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["../../*"],
      "@meuprojeto/shared-lib/*": ["../../packages/shared-lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}