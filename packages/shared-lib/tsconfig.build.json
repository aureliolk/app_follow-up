// packages/shared-lib/tsconfig.build.json
{
  "extends": "../../tsconfig.base.json", // Herda da base
  "compilerOptions": {
    // --- OBRIGATÓRIO PARA CRIAR A PASTA DIST ---
    "composite": true,          // <<< GARANTA true >>>
    "outDir": "./dist",         // Define o diretório de saída
    "rootDir": "src",           // <<< Adicionado >>>
    "noEmit": false,            // GARANTE a emissão de arquivos JS
    "emitDeclarationOnly": false, // Garante a emissão de JS, não só .d.ts
    // --- Importante para gerar tipos corretos ---
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // --- Outras opções recomendadas ---
    "module": "NodeNext",       // <<< Alterado de CommonJS >>>
    "target": "ES2020",         // Target moderno
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
    // REMOVER "types": [...] se você adicionou antes
  },
  "include": ["src/**/*"],         // Inclui apenas a pasta src da lib
  "exclude": ["node_modules", "dist"] // Exclui node_modules e a própria dist
}