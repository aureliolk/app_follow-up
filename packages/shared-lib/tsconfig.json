// packages/shared-lib/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,    // Essencial
    "outDir": "dist",       // Onde o build (tsc -b) colocará os arquivos
    "rootDir": "src",       // De onde vêm os fontes
    "declaration": true,    // Necessário para composite
    "declarationMap": true, // Bom ter
    "sourceMap": true       // Bom ter
    // Note: Não precisamos de 'paths' aqui para referenciar outros pacotes
    // Não precisamos de 'noEmit' ou 'emitDeclarationOnly' aqui
  },
  "include": ["src/**/*"], // Apenas código fonte da lib
  "exclude": ["node_modules", "dist"],
  "references": [] // Vazio, não depende de outros pacotes da workspace
}